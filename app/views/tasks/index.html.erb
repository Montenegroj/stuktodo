<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.content %></td>
        <td><%= link_to "&nbsp; Show &nbsp; ".html_safe, task %></td>
        <td><%= link_to "&nbsp; Edit &nbsp; ".html_safe, edit_task_path(task) %></td>
        <td><%= link_to " &nbsp; Destroy &nbsp; ".html_safe, task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
